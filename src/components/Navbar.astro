	}

	ul {
		background-color: rgb(29, 31, 36);
		padding: 0.8rem 1rem;
		list-style: none;
		display: flex;
		justify-content: center;
		flex-wrap: wrap;
		margin: 0;
	}

	a:hover {
		text-decoration: none;
	}

